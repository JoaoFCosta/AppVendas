@model AppVendas.Models.Cliente

@{
    ViewData["Title"] = "Adicionar Clientes";
}

<div class="d-flex justify-content-between my-5 align-items-center">
    <span class="display-6 w-75 justify-content-center">Cadastro de Clientes</span>
</div>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-12 mt-2">
            <div class="form-group">
                <label asp-for="ClienteNome" class="control-label"></label>
                <input asp-for="ClienteNome" class="form-control" />
                <span asp-validation-for="ClienteNome" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-md-4 mt-2">
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="col-12 col-md-4 mt-2">
            <div class="form-group">
                <label asp-for="Celular" class="control-label"></label>
                <input asp-for="Celular" class="form-control" />
                <span asp-validation-for="Celular" class="text-danger"></span>
            </div>
        </div>

        <div class="col-12 col-md-3 mt-2">
            <div class="form-group">
                <label asp-for="DataCadastro" class="control-label"></label>
                <input asp-for="DataCadastro" class="form-control" />
                <span asp-validation-for="DataCadastro" class="text-danger"></span>
            </div>
        </div>

        <div class="col-12 col-md mt-2">
            <div class="form-group">
                <label>@Html.DisplayNameFor(model => model.CadastroAtivo)</label>
                <div class="form-check">
                    <input type="radio" class="form-check-input" asp-for="CadastroAtivo" value="true" id="ativo" />
                    <label class="form-check-label" for="ativo">Ativo</label>
                </div>
                <div class="form-check">
                    <input type="radio" class="form-check-input" asp-for="CadastroAtivo" value="false" id="inativo" />
                    <label class="form-check-label" for="inativo">Inativo</label>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-4">
            <div class="form-group">
                <button type="submit" class="btn btn-primary d-flex align-items-center px-5 mt-3 w-100 justify-content-center py-3">
                    <ion-icon name="save-outline" class="me-2"></ion-icon> Salvar
                </button>
            </div>
        </div>
        <div class="col-4"></div>
        <div class="col-4">
            <a asp-action="Index" class="btn btn-outline-info d-flex align-items-baseline align-content-center px-5 mt-3 w-100 justify-content-center py-3">
                <ion-icon name="arrow-back" class="me-2"></ion-icon> Voltar
            </a>
        </div>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
